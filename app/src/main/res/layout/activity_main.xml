<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaywei.verticalseekbar.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/tv_current_temper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈">
    </TextView>
    <com.jaywei.verticalseekbar.VerticalSeekBar
        android:padding="20dp"
        app:image_background="@mipmap/ic_launcher"
        android:id="@+id/vpb_inner_temper"
        android:layout_width="20dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp">


    </com.jaywei.verticalseekbar.VerticalSeekBar>

    <TextView
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="150dp"
        android:id="@+id/tv_current_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0">
    </TextView>
    <com.jaywei.verticalseekbar.VerticalSeekBar
        android:id="@+id/vpb_brightness"
        android:layout_width="200dp"
        android:padding="20dp"
        android:layout_height="10dp"
        app:seekbar_orientation="1"
        app:circle_color="@color/colorPrimary"
        app:vertical_color="@color/colorAccent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="130dp">

    </com.jaywei.verticalseekbar.VerticalSeekBar>
</RelativeLayout>

